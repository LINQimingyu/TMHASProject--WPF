<UserControl
    x:Class="thinger.WPF.MultiTHMonitorProject.Views.UserManageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:comm="clr-namespace:thinger.WPF.MultiTHMonitorProject.Command"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:thinger.WPF.MultiTHMonitorProject.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Background="#070b40"
            BorderBrush="#1d2f85"
            BorderThickness="2">
            <GroupBox
                materialDesign:ColorZoneAssist.Background="#070b40"
                materialDesign:ColorZoneAssist.Foreground="#20cefa"
                materialDesign:ColorZoneAssist.Mode="Custom"
                FontSize="16"
                Header="用户信息管理"
                Style="{StaticResource MaterialDesignGroupBox}">
                <StackPanel Background="#05082e" Orientation="Horizontal">
                    <Border
                        Width="130"
                        Height="40"
                        Margin="15,20,20,20"
                        Background="#00c7fa"
                        CornerRadius="15">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="White"
                            Text="用户操作" />
                    </Border>
                    <TextBox
                        MaxWidth="400"
                        Padding="10"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Foreground="#eaf9da"
                        materialDesign:HintAssist.Hint="请输入用户名"
                        materialDesign:TextFieldAssist.UnderlineBrush="#eaf9da"
                        AcceptsReturn="True"
                        Background="#eaf9da"
                        BorderBrush="#eaf9da"
                        FontSize="14"
                        Text="{Binding LoginName}"
                        TextWrapping="Wrap" />
                    <PasswordBox
                        Height="40"
                        MaxWidth="400"
                        Margin="15,0,0,0"
                        Padding="10"
                        comm:PasswordExtention.Password="{Binding LoginPwd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Foreground="#eaf9da"
                        materialDesign:HintAssist.Hint="请输入用户密码"
                        materialDesign:TextFieldAssist.UnderlineBrush="#eaf9da"
                        Background="#eaf9da"
                        BorderBrush="#eaf9da"
                        FontSize="14">
                        <behavior:Interaction.Behaviors>
                            <comm:PasswordBehavior />
                        </behavior:Interaction.Behaviors>
                    </PasswordBox>
                    <PasswordBox
                        Height="40"
                        MaxWidth="400"
                        Margin="15,0,0,0"
                        Padding="10"
                        comm:PasswordExtention.Password="{Binding ConfirmLoginPwd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Foreground="#eaf9da"
                        materialDesign:HintAssist.Hint="请确认用户密码"
                        materialDesign:TextFieldAssist.UnderlineBrush="#eaf9da"
                        Background="#eaf9da"
                        BorderBrush="#eaf9da"
                        FontSize="14">
                        <behavior:Interaction.Behaviors>
                            <comm:PasswordBehavior />
                        </behavior:Interaction.Behaviors>
                    </PasswordBox>
                    <CheckBox
                                Margin="15,0,0,0"
                                Background="#00f7ec"
                                Content="参数设置"
                                FontSize="16"
                                Foreground="#00f7ec"
                                IsChecked="{Binding ParamSetCheckedVal}"
                                Style="{DynamicResource CheckBoxStyle1}" />
                    <CheckBox
                                Margin="15,0,0,0"
                                Background="#00f7ec"
                                Content="配方管理"
                                FontSize="16"
                                Foreground="#00f7ec"
                                IsChecked="{Binding RecipeCheckedVal}"
                                Style="{DynamicResource CheckBoxStyle1}" />
                    <CheckBox
                                Margin="15,0,0,0"
                                Background="#00f7ec"
                                Content="报警追溯"
                                FontSize="16"
                                Foreground="#00f7ec"
                                IsChecked="{Binding HistoryLogCheckedVal}"
                                Style="{DynamicResource CheckBoxStyle1}" />
                    <CheckBox
                                Margin="15,0,0,0"
                                Background="#00f7ec"
                                Content="历史曲线"
                                FontSize="16"
                                Foreground="#00f7ec"
                                IsChecked="{Binding HistoryTrendCheckedVal}"
                                Style="{DynamicResource CheckBoxStyle1}" />
                    <CheckBox
                                Margin="15,0,0,0"
                                Background="#00f7ec"
                                Content="用户管理"
                                FontSize="16"
                                Foreground="#00f7ec"
                                IsChecked="{Binding UserManageCheckedVal}"
                                Style="{DynamicResource CheckBoxStyle1}" />
                    <Button
                        Width="120"
                        Height="40"
                        Margin="15,0,0,0"
                        materialDesign:RippleAssist.Feedback="#DD000000"
                        Background="#04a9f3"
                        BorderBrush="#04a9f3"
                        Command="{Binding SelectAllCommand}"
                        Content="全选/全不选"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="#fff"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                    <Button
                        Width="120"
                        Height="40"
                        Margin="15,0,0,0"
                        materialDesign:RippleAssist.Feedback="#DD000000"
                        Background="#02c294"
                        BorderBrush="#02c294"
                        Command="{Binding AddUserCommand}"
                        Content="添加用户"
                        FontSize="16"
                        Foreground="#fff"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                    <Button
                        Width="120"
                        Height="40"
                        Margin="15,0,0,0"
                        materialDesign:RippleAssist.Feedback="#DD000000"
                        Background="#fa9779"
                        BorderBrush="#fa9779"
                        Command="{Binding ModifyUserCommand}"
                        Content="修改用户"
                        FontSize="16"
                        Foreground="#fff"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}" />

                </StackPanel>
            </GroupBox>
        </Border>

        <Border
            Grid.Row="1"
            Margin="0,20,0,0"
            Background="#070b40"
            BorderBrush="#1d2f85"
            BorderThickness="2">
            <DataGrid
                Name="dataGridUserList"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                AutoGenerateColumns="False"
                Background="Transparent"
                BorderThickness="0"
                CanUserAddRows="False"
                CanUserResizeColumns="True"
                FontSize="16"
                ItemsSource="{Binding SysAdmins}"
                SelectionMode="Single">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <!--  网格线颜色  -->
                        <Setter Property="CanUserResizeColumns" Value="false" />
                        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
                        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
                        <Setter Property="HeadersVisibility" Value="Column" />
                        <Setter Property="HorizontalGridLinesBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="#0a145e" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="VerticalGridLinesBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="Transparent" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Style>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Foreground" Value="#9ec7ff" />
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <!--<Setter Property="Background" Value="#001f55"></Setter>-->
                        <Setter Property="Foreground" Value="#1db4e1" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="BorderBrush" Value="#0a145e" />
                        <Setter Property="Height" Value="70" />
                        <Setter Property="FontSize" Value="14" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush>
                                    <GradientStop Offset="0" Color="#0a145e" />
                                    <GradientStop Offset="1" Color="#070b40" />
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Height" Value="50" />
                        <Setter Property="Foreground" Value="#9ec7ff" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush>
                                            <GradientStop Offset="0" Color="#5f3bbe" />
                                            <GradientStop Offset="1" Color="#070b40" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="#0a145e" />
                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                <Setter Property="Foreground" Value="#9ec7ff" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="50*" Header="序号">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding LoginId}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="用户名">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding LoginName}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="用户密码">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding LoginPwd}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="参数设置">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding ParamValue}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="配方管理">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding RecipeValue}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="报警追溯">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding HistoryLogValue}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="历史趋势">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding HistoryTrendValue}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="用户管理">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding UserManageValue}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="100*" Header="操作">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Button
                                        Background="#a42fc9"
                                        BorderBrush="#a42fc9"
                                        Command="{Binding DataContext.DelUserCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding LoginId}"
                                        Content="删除用户"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <behavior:Interaction.Triggers>
                    <behavior:EventTrigger EventName="SelectionChanged">
                        <behavior:InvokeCommandAction Command="{Binding SelectRowCommand}" CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                    </behavior:EventTrigger>
                </behavior:Interaction.Triggers>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
