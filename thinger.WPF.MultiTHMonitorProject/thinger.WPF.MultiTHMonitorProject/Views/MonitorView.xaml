    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="1050"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="20" />
            <Setter Property="Background" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="ItemContainerStyle1" TargetType="ListBoxItem">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            Name="Border"
                            Padding="7"
                            Background="Transparent"
                            SnapsToDevicePixels="True">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.6*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <UniformGrid
            VerticalAlignment="Top"
            Columns="2"
            Rows="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    Height="40"
                    Padding="40,5,0,0"
                    FontSize="20"
                    Text="1号站点">
                    <TextBlock.Background>
                        <ImageBrush ImageSource="/Images/t_bg.png" />
                    </TextBlock.Background>
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                            <GradientStop Offset="0" Color="#e6faff" />
                            <GradientStop Offset="1" Color="#28e8ff" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <Border
                    Grid.Row="1"
                    Margin="0,20,0,0"
                    Padding="10"
                    Background="#070b40"
                    BorderBrush="#1d2f86"
                    BorderThickness="2">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Width="190" HorizontalAlignment="Left">
                            <lc:GaugeMeterPlate
                                HorizontalAlignment="Center"
                                Maximum="100"
                                Minimum="0"
                                PlateBackground="Transparent"
                                PlateBorderThickness="3"
                                Value="{Binding StateTemp01}" />
                            <TextBlock
                                Margin="0,-20,0,0"
                                FontSize="16"
                                Foreground="#fff"
                                TextAlignment="Center"><Run Text="温度:" /><Run Text=" " /><Run Foreground="#ff982a" Text="{Binding StateTemp01}" /><Run Text=" " /><Run Text="℃" /></TextBlock>
                        </StackPanel>
                        <StackPanel Width="190" HorizontalAlignment="Right">
                            <lc:GaugeMeterPlate
                                HorizontalAlignment="Center"
                                Maximum="100"
                                Minimum="0"
                                PlateBackground="Transparent"
                                PlateBorderThickness="3"
                                Value="{Binding StateHum01}" />
                            <TextBlock
                                Margin="0,-20,0,0"
                                FontSize="16"
                                Foreground="#fff"
                                TextAlignment="Center"><Run Text="湿度:" /><Run Text=" " /><Run Foreground="#00f7ec" Text="{Binding StateHum01}" /><Run Text=" " /><Run Text="%" /></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
            <Grid Margin="15,0,0,0">
