        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock
                    Height="40"
                    Padding="40,5,0,0"
                    FontSize="20"
                    Text="实时趋势图">
                    <TextBlock.Background>
                        <ImageBrush ImageSource="/Images/t_bg_1.png" TileMode="FlipXY" />
                    </TextBlock.Background>
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                            <GradientStop Offset="0" Color="#e6faff" />
                            <GradientStop Offset="1" Color="#28e8ff" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <Border
                    Grid.Row="1"
                    Margin="0,20,0,10"
                    Padding="10"
                    Background="#070b40"
                    BorderBrush="#1d2f86"
                    BorderThickness="2">
                    <StackPanel>
                        <lvc:CartesianChart
                            Width="920"
                            Height="350"
                            Margin="20"
                            LegendPosition="Right"
                            LegendTextPaint="{Binding LegendTextPaint}"
                            Series="{Binding LineSeries}"
                            TooltipTextPaint="{Binding TooltipTextPaint}"
                            XAxes="{Binding XAxes}"
                            YAxes="{Binding YAxes}" />
                        <UniformGrid
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Columns="6"
                            Rows="2">
                            <CheckBox
                                Margin="10"
                                Background="#00f7ec"
                                Command="{Binding ShowCommand}"
                                Content="1#站点湿度"
                                FontSize="16"
                                Foreground="#00f7ec"
                                IsChecked="{Binding SiteHum01Show}"
                                Style="{DynamicResource CheckBoxStyle1}" />
                            <CheckBox
                                Margin="10"
                                Background="#ff992c"
                                Command="{Binding ShowCommand}"
                                Content="1#站点温度"
                                FontSize="16"
                                Foreground="#ff992c"
                                IsChecked="{Binding SiteTemp01Show}"
                                Style="{DynamicResource CheckBoxStyle1}" />
