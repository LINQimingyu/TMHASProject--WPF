                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,20,0"
                                    HorizontalAlignment="Center"
                                    Background="Transparent"
                                    Cursor="Hand"
                                    
                                    FontSize="16"
                                    Foreground="#20cefa"
                                    Text="6#站点湿度低限" />
                                <TextBox
                                    Width="50"
                                    BorderBrush="Transparent"
                                    FontSize="16"
                                    Foreground="#20cefa"
                                    Text="{Binding StateLHum06}"
                                    TextAlignment="Center" />
                                <TextBlock Text="%" VerticalAlignment="Center" Foreground="#20cefa" FontSize="16"/>
                            </StackPanel>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CheckBox
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Background="#ff992c"
                                Content="温度报警启用"
                                FontSize="16"
                                Foreground="#ff992c"
                                IsChecked="{Binding IsAlarmTemp06}"
                                Style="{DynamicResource CheckBoxStyle1}" />
                            <CheckBox
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Background="#00f7ec"
                                Content="湿度报警启用"
                                FontSize="16"
                                Foreground="#00f7ec"
                                IsChecked="{Binding IsAlarmHum06}"
                                Style="{DynamicResource CheckBoxStyle1}" />
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Margin="0,20,0,0"
            Background="#070b40"
            BorderBrush="#1d2e83"
            BorderThickness="2">
            
            <Grid Margin="20" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock Text="配方管理" VerticalAlignment="Top" FontSize="18" Foreground="#1db4e1"/>
                    <TextBox
                            Margin="0,50,0,0"
                            materialDesign:HintAssist.Hint="当前配方"
                           BorderBrush="#1cc5ff"
                        Foreground="#1cc5ff"
                        Name="txtCurrentRecipe"
                        materialDesign:HintAssist.Background="#070b40"
                         FontSize="16"
                        Text="{Binding CurrentRecipeName}"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                    <TextBox
                        Foreground="#1cc5ff"
                        BorderBrush="#1cc5ff"
                            Margin="0,25,0,0"
                            Text="{Binding RecipeName}"
                            materialDesign:HintAssist.Hint="配方名称"
                        materialDesign:HintAssist.Background="#070b40"
                         FontSize="16"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                    <Button
                            Height="50"
                            Margin="0,25,0,0"
                            Background="#04a9f3"
                            BorderBrush="#04a9f3"
                            Content="添加配方"
                         FontSize="16"
                            Command="{Binding AddRecipeCommand}"
                            Style="{StaticResource MaterialDesignRaisedDarkButton}" Cursor="Hand" />
                    <Button
                            Height="50"
                            Margin="0,25,0,0"
                            Background="#fa9777"
                            BorderBrush="#fa9777"
                        CommandParameter="{Binding ElementName=txtCurrentRecipe,Path=Text}"
                        Command="{Binding ModifyRecipeCommand}"
                            Content="修改配方"
                        FontSize="16"
                            Style="{StaticResource MaterialDesignRaisedDarkButton}" Cursor="Hand" />

                </StackPanel>
                <DataGrid
                        Name="dataGridEquipmentsSerial"
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        BorderThickness="0"
                        CanUserAddRows="False"
                        CanUserResizeColumns="True"
                        FontSize="16"
                        ItemsSource="{Binding RecipeInfos}"
                        SelectionMode="Single">
                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <!--  网格线颜色  -->
                            <Setter Property="CanUserResizeColumns" Value="false" />
                            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
                            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
                            <Setter Property="HeadersVisibility" Value="Column" />
                            <Setter Property="HorizontalGridLinesBrush">
                                <Setter.Value>
                                    <SolidColorBrush Color="#0a145e" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="VerticalGridLinesBrush">
                                <Setter.Value>
                                    <SolidColorBrush Color="Transparent" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Style>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Foreground" Value="#9ec7ff" />
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <!--<Setter Property="Background" Value="#001f55"></Setter>-->
                            <Setter Property="Foreground" Value="#1db4e1" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Setter Property="BorderBrush" Value="#0a145e" />
                            <Setter Property="Height" Value="70" />
                            <Setter Property="FontSize" Value="14" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Offset="0" Color="#0a145e" />
                                        <GradientStop Offset="1" Color="#070b40" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Height" Value="50" />
                            <Setter Property="Foreground" Value="#9ec7ff" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush>
                                                <GradientStop Offset="0" Color="#5f3bbe" />
                                                <GradientStop Offset="1" Color="#070b40" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="BorderBrush" Value="#0a145e" />
                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    <Setter Property="Foreground" Value="#9ec7ff" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="80*" Header="配方名称">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding RecipeName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="80*" Header="操作">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                        <Button
                                        Background="#04a9f3"
                    BorderBrush="#04a9f3"
                                        Command="{Binding DataContext.SelectRecipeCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding RecipeName}"
                                        Content="选择配方"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                                        <Button
                                        Background="#a42fc9"
                                        BorderBrush="#a42fc9"
                                        Command="{Binding DataContext.ApplyRecipeCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding RecipeName}"
                                        Content="应用配方"
                                            Margin="20,0,20,0"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                                        <Button
                                        Background="#f36ea8"
                                        BorderBrush="#f36ea8"
                                        Command="{Binding DataContext.DeleteRecipeCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding RecipeName}"
                                        Content="删除配方"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
