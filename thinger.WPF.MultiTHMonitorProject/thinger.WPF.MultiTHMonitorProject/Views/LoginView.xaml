<UserControl
    x:Class="thinger.WPF.MultiTHMonitorProject.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:comm="clr-namespace:thinger.WPF.MultiTHMonitorProject.Command"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:thinger.WPF.MultiTHMonitorProject.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Name="Login"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome GlassFrameThickness="-10" />
                </Setter.Value>
            </Setter>
        </Style>
    </prism:Dialog.WindowStyle>
    <UserControl.Resources>
        <Style x:Key="borderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="Background" Value="yellow" />
            <Setter Property="Height" Value="1" />
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                        <GradientStop Offset="0" Color="#43e9ff" />
                        <GradientStop Offset="1" Color="Transparent" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style
            x:Key="RightBorderStyle"
            BasedOn="{StaticResource borderStyle}"
            TargetType="Border">
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0" Color="#43e9ff" />
                        <GradientStop Offset="1" Color="Transparent" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush
            x:Key="GlobalBackground"
            StartPoint="0.5,0"
            EndPoint="0.5,1">
            <GradientStop
                Color="#0A1A3A"
                Offset="0" />
            <GradientStop
                Color="#00172E"
                Offset="0.6" />
            <GradientStop
                Color="#002A4A"
                Offset="1" />
        </LinearGradientBrush>
    </UserControl.Resources>



    <Grid
        x:Name="LoginBox"
        Background="{StaticResource GlobalBackground}">
        <Grid.Resources>
            <Style
                x:Key="NeonBorder"
                TargetType="Border">
                <Setter
                    Property="CornerRadius"
                    Value="8" />
                <Setter
                    Property="Background"
                    Value="#102040" />
                <Setter
                    Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect
                            Color="#43e9ff"
                            BlurRadius="30"
                            Opacity="0.6" />
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Width="520"
            Height="60"
            Style="{StaticResource NeonBorder}"
            Panel.ZIndex="-1" />

        <StackPanel
            x:Name="bTop"
            Margin="0,0,0,40"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="btnClose"
                Grid.Column="1"
                Width="50"
                Height="50"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding LogoutCommand}"
                Content="✕"
                Cursor="Hand"
                FontSize="22"
                Foreground="White" />
        </StackPanel>
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource borderStyle}" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Image
                    Width="50"
                    Margin="10,0,10,0"
                    RenderOptions.BitmapScalingMode="Fant"
                    SnapsToDevicePixels="True" />
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="32"
                    Foreground="#43e9ff"
                    Text="多路温湿度在线监控系统"
                    TextAlignment="Center" />
            </StackPanel>
            <Border Grid.Column="2" Style="{StaticResource RightBorderStyle}" />
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Border
                Width="350"
                Height="400"
                Margin="150,0,0,0"
                CornerRadius="10">
                <StackPanel Margin="20">
                    <TextBlock
                        Margin="0,30,0,0"
                        FontSize="26"
                        FontWeight="Normal"
                        Foreground="#43e9ff"
                        Text="管理员登录" />
                    <TextBox
                        Width="300"
                        Margin="0,30,0,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Background="#12226c"
                        materialDesign:HintAssist.Foreground="#43e9ff"
                        materialDesign:HintAssist.HelperTextFontSize="14"
                        materialDesign:HintAssist.Hint="请输入管理员账号"
                        BorderBrush="#43e9ff"
                        FontSize="14"
                        Foreground="#afb0d6"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding LoginName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <PasswordBox
                        Width="300"
                        Margin="0,30,0,0"
                        VerticalAlignment="Top"
                        comm:PasswordExtention.Password="{Binding LoginPwd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Background="#12226c"
                        materialDesign:HintAssist.Foreground="#43e9ff"
                        materialDesign:HintAssist.Hint="请输入管理员密码"
                        BorderBrush="#43e9ff"
                        FontSize="14"
                        Foreground="#afb0d6"
                        Style="{StaticResource MaterialDesignOutlinedPasswordBox}">

                        <!--  通过行为给密码控件，添加一个密码的行为  -->
                        <behavior:Interaction.Behaviors>
                            <comm:PasswordBehavior />
                        </behavior:Interaction.Behaviors>
                    </PasswordBox>

                    <Button
                        Height="50"
                        Margin="0,40,0,0"
                        materialDesign:RippleAssist.Feedback="#43e9ff"
                        Background="#43e9ff"
                        BorderThickness="0"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=Login}"
                        Content="登 录"
                        Cursor="Hand"
                        FontSize="18"
                        Foreground="#142557"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}" />

                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="14"
                        Foreground="Red"
                        Text="{Binding LoginTip}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
    

</UserControl>
