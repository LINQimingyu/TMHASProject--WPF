<Window
    x:Class="thinger.WPF.MultiTHMonitorProject.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="1920"
    Height="1080"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    Background="Transparent">
    <Window.Triggers>
        <EventTrigger
            RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard
                    RepeatBehavior="Forever">
                    <DoubleAnimation
                        Storyboard.TargetName="Scanner"
                        Storyboard.TargetProperty="X"
                        From="-200"
                        To="2120"
                        Duration="0:0:4"
                        DecelerationRatio="0.25" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Window.Resources>
        <!--  导航切换按钮的样式  -->
        <Style
            TargetType="RadioButton">
            <Setter
                Property="Foreground"
                Value="#fff" />
            <!--  默认字体颜色  -->
            <Setter
                Property="FontSize"
                Value="16" />
            <Setter
                Property="Cursor"
                Value="Hand" />
            <Setter
                Property="Margin"
                Value="10,0,10,0" />
            <Setter
                Property="Template">
                <Setter.Value>
                    <ControlTemplate
                        TargetType="RadioButton">
                        <Border
                            Name="border"
                            Width="98"
                            Height="38"
                            Background="Transparent"
                            BorderBrush="#008aff"
                            BorderThickness="1"
                            CornerRadius="20">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger
                                Property="IsChecked"
                                Value="True">
                                <Setter
                                    TargetName="border"
                                    Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush
                                            StartPoint="1,0"
                                            EndPoint="1,1">
                                            <GradientStop
                                                Offset="0"
                                                Color="#00d4ec" />
                                            <GradientStop
                                                Offset="0.5"
                                                Color="#00abff" />
                                            <GradientStop
                                                Offset="1"
                                                Color="#00f5ed" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter
                                    TargetName="border"
                                    Property="BorderThickness"
                                    Value="2" />
                                <Setter
                                    TargetName="border"
                                    Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush
                                            StartPoint="1,0"
                                            EndPoint="1,1">
                                            <GradientStop
                                                Offset="0"
                                                Color="#00d4ec" />
                                            <GradientStop
                                                Offset="0.5"
                                                Color="Transparent" />
                                            <GradientStop
                                                Offset="1"
                                                Color="#00f5ed" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter
                                    TargetName="border"
                                    Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="40"
                                            ShadowDepth="0"
                                            Color="#2f62f7" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger
                    Property="IsChecked"
                    Value="True">
                    <Setter
                        Property="Foreground"
                        Value="#fff" />
                    <Setter
                        Property="FontWeight"
                        Value="Bold" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style
            x:Key="ConnectStatusLed"
            TargetType="Border">
            <Setter
                Property="Background">
                <Setter.Value>
                    <LinearGradientBrush
                        StartPoint="0,0"
                        EndPoint="1,1">
                        <GradientStop
                            Offset="0"
                            Color="#01c0c8" />
                        <GradientStop
                            Offset="1"
                            Color="#01c0c8" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid
        Background="#05092e">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="128" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--  顶部导航  -->
        <Grid
            x:Name="MoveColorZone">
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush
                        StartPoint="0,0"
                        EndPoint="1,1">
                        <GradientStop
                            Color="#060270"
                            Offset="0" />
                        <GradientStop
                            Color="#060270"
                            Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <!-- 动态扫描线 -->
            <Rectangle
                Width="200"
                Height="111"
                Opacity="0.4"
                HorizontalAlignment="Left"
                Fill="#5050A0FF">
                <Rectangle.Effect>
                    <BlurEffect
                        Radius="30" />
                </Rectangle.Effect>
                <Rectangle.RenderTransform>
                    <TranslateTransform
                        x:Name="Scanner" />
                </Rectangle.RenderTransform>
            </Rectangle>
            <!-- 多层级文字效果 -->
            <Viewbox
                Width="1500"
                Height="80"
                HorizontalAlignment="Center">
                <Grid>
                    <!-- 底层扩散光晕 -->
                    <TextBlock
                        Text="多路温湿度监控系统"
                        FontFamily="Microsoft YaHei UI"
                        FontWeight="Bold"
                        Foreground="#300050FF">
                        <TextBlock.Effect>
                            <BlurEffect
                                Radius="20" />
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- 中层轮廓阴影 -->
                    <TextBlock
                        Text="多 路 温 湿 度 监 控 系 统"
                        FontFamily="Microsoft YaHei UI"
                        FontWeight="Bold"
                        Foreground="Transparent">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                Color="#405090"
                                Direction="270"
                                ShadowDepth="0"
                                BlurRadius="12" />
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- 主体文字 -->
                    <TextBlock
                        Text="多 路 温 湿 度 监 控 系 统"
                        FontFamily="Microsoft YaHei UI"
                        FontWeight="Bold"
                        Foreground="#C0E0FF">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                Color="#204070"
                                Direction="270"
                                ShadowDepth="8"
                                BlurRadius="10" />
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- 顶部高光 -->
                    <TextBlock
                        Text="多 路 温 湿 度 监 控 系 统"
                        FontFamily="Microsoft YaHei UI"
                        FontWeight="Bold"
                        Foreground="#80FFFFFF">
                        <TextBlock.Effect>
                            <BlurEffect
                                Radius="2" />
                        </TextBlock.Effect>
                        <TextBlock.Clip>
                            <RectangleGeometry
                                Rect="0,0,1,0.5" />
                        </TextBlock.Clip>
                    </TextBlock>
                </Grid>
            </Viewbox>


            <StackPanel
                Orientation="Horizontal">
                <RadioButton
                    Margin="130,0,10,0"
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="MonitorView"
                    Content="集中监控"
                    IsChecked="True" />
                <RadioButton
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="ParamSetView"
                    Content="参数设置" />
                <RadioButton
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="RecipeView"
                    Content="配方管理" />

                <RadioButton
                    Margin="980,0,10,0"
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="AlarmView"
                    Content="报警追溯" />
                <RadioButton
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="HistoryView"
                    Content="历史趋势"
                    Cursor="Hand" />
                <RadioButton
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="UserManageView"
                    Content="用户管理" />
            </StackPanel>
        </Grid>
        <Grid
            Grid.Row="1"
            Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="1*" />
                <ColumnDefinition
                    Width="2*" />
                <ColumnDefinition
                    Width="1*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="#4f657a">
                    <Run
                        Foreground="#fff"
                        Text="欢迎 " />
                    <Run
                        Foreground="#00f7ec"
                        Text="{Binding UserName}" />
                    <Run
                        Foreground="#fff"
                        Text=" 登录系统" />
                </TextBlock>
                <TextBlock
                    x:Name="SysTime"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="#00f7ec"
                    Text="2022年11月25日 15:51:00 星期五" />
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#fff"
                    Text="通信状态" />
                <Border
                    x:Name="ConnectStatusLed"
                    Width="20"
                    Height="20"
                    Margin="10,0,10,0"
                    Background="Red"
                    CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            ShadowDepth="0"
                            Color="Red" />
                    </Border.Effect>
                </Border>
                <Button
                    Name="btnClose"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Content="退出系统"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
            </StackPanel>
        </Grid>
        <!--  主内容区  -->
        <ContentControl
            Grid.Row="2"
            prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
