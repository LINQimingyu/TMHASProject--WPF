<Window
    x:Class="thinger.WPF.MultiTHMonitorProject.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:thinger.WPF.MultiTHMonitorProject.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="MainView"
    Width="1920"
    Height="1080"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  导航按钮的基本样式  -->
        <Style
            TargetType="RadioButton">
            <Setter
                Property="Foreground"
                Value="#fff" />
            <Setter
                Property="FontSize"
                Value="16" />
            <Setter
                Property="Cursor"
                Value="Hand" />
            <Setter
                Property="Margin"
                Value="10,0,10,0" />
            <Setter
                Property="Template">
                <Setter.Value>
                    <ControlTemplate
                        TargetType="RadioButton">
                        <Border
                            x:Name="border"
                            Width="98"
                            Height="38"
                            Background="Transparent"
                            BorderBrush="#008aff"
                            BorderThickness="1"
                            CornerRadius="20">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger
                                Property="IsChecked"
                                Value="True">
                                <Setter
                                    TargetName="border"
                                    Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush
                                            StartPoint="1,0"
                                            EndPoint="1,1">
                                            <GradientStop
                                                Offset="0"
                                                Color="#00d4ec" />
                                            <GradientStop
                                                Offset="0.5"
                                                Color="#00abff" />
                                            <GradientStop
                                                Offset="1"
                                                Color="#00f5ed" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter
                                    TargetName="border"
                                    Property="BorderThickness"
                                    Value="2" />
                                <Setter
                                    TargetName="border"
                                    Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush
                                            StartPoint="1,0"
                                            EndPoint="1,1">
                                            <GradientStop
                                                Offset="0"
                                                Color="#00d4ec" />
                                            <GradientStop
                                                Offset="0.5"
                                                Color="Transparent" />
                                            <GradientStop
                                                Offset="1"
                                                Color="#00f5ed" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter
                                    TargetName="border"
                                    Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="40"
                                            ShadowDepth="0"
                                            Color="#2f62f7" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger
                    Property="IsChecked"
                    Value="True">
                    <Setter
                        Property="Foreground"
                        Value="#fff" />
                    <Setter
                        Property="FontWeight"
                        Value="Bold" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid
        Background="#05092e">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="128" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--  导航部分  -->
        <Grid
            x:Name="MoveColorZone">
            <Grid.Background>
                <ImageBrush
                    ImageSource="/Images/header_bg.png" />
            </Grid.Background>
            <StackPanel
                Orientation="Horizontal">
                <RadioButton
                    Margin="130,0,0,0"
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="MonitorView"
                    Content="集中监控"
                    Cursor="Hand"
                    IsChecked="True" />
                <RadioButton
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="ParamSetView"
                    Content="参数设置"
                    Cursor="Hand" />
                <RadioButton
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="ParamSetView"
                    Content="配方管理" />
                <RadioButton
                    Margin="980,0,10,0"
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="AlarmView"
                    Content="报警追溯"
                    Cursor="Hand" />
                <RadioButton
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="HistoryView"
                    Content="历史趋势"
                    Cursor="Hand" />
                <RadioButton
                    Command="{Binding OpenViewCommand}"
                    CommandParameter="UserManageView"
                    Content="用户管理"
                    Cursor="Hand" />
            </StackPanel>
        </Grid>
        <!--  登录状态结构  -->
        <Grid
            Grid.Row="1"
            Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="1*" />
                <ColumnDefinition
                    Width="2*" />
                <ColumnDefinition
                    Width="1*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10,0,0,0"
                    FontSize="16">
                    <Run
                        Foreground="#fff"
                        Text="欢迎" />
                    <Run
                        Foreground="#00f7ec"
                        Text="{Binding UserName}" />
                    <Run
                        Foreground="#fff"
                        Text="登录系统" />
                </TextBlock>
                <TextBlock
                    x:Name="SysTime"
                    Margin="10,0,0,0"
                    FontSize="16"
                    Foreground="#00f7ec"
                    Text="2023年2月3日 15:51:00 星期五" />
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#fff"
                    Text="通信状态" />
                <Border
                    x:Name="ConnectStatusLed"
                    Width="20"
                    Height="20"
                    Margin="10,0,10,0"
                    Background="Red"
                    CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            ShadowDepth="0"
                            Color="Red" />
                    </Border.Effect>
                </Border>
                <Button
                    Name="btnClose"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Content="退出系统"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
            </StackPanel>
        </Grid>

        <!--  内容显示切换的区域  -->
        <ContentControl
            Grid.Row="2"
            prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
