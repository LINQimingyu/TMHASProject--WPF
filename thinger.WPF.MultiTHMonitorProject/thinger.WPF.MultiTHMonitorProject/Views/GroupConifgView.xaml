<UserControl
    x:Class="thinger.WPF.MultiTHMonitorProject.Views.GroupConifgView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:thinger.WPF.MultiTHMonitorProject.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#05092e"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome GlassFrameThickness="-10" />
                </Setter.Value>
            </Setter>
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid Margin="25,0,25,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button
                x:Name="btnClose"
                Grid.Column="1"
                Width="50"
                Height="50"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding LogoutCommand}"
                CommandParameter="{Binding}"
                Content="✕"
                Cursor="Hand"
                FontSize="18"
                Foreground="White" />
        </StackPanel>
        <Border Grid.Row="1" Background="#070b40">
            <GroupBox
                materialDesign:ColorZoneAssist.Background="#1d2f86"
                materialDesign:ColorZoneAssist.Foreground="#00e4ff"
                materialDesign:ColorZoneAssist.Mode="Custom"
                FontSize="16"
                Header="通信组信息配置"
                Style="{StaticResource MaterialDesignGroupBox}">
                <StackPanel
                    Margin="15"
                    Background="Transparent"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#00e4ff"
                        Text="通信组名称" />
                    <TextBox
                        MaxWidth="400"
                        Padding="10"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Foreground="#17c6cd"
                        materialDesign:HintAssist.Hint="请输入通信组名"
                        materialDesign:TextFieldAssist.UnderlineBrush="#17c6cd"
                        AcceptsReturn="True"
                        Background="#e6eceb"
                        BorderBrush="#00b9c3"
                        FontSize="14"
                        Text="{Binding GroupName}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="20,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#00e4ff"
                        Text="起始地址" />
                    <TextBox
                        MaxWidth="400"
                        Padding="10"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Foreground="#17c6cd"
                        materialDesign:HintAssist.Hint="请输入起始地址"
                        materialDesign:TextFieldAssist.UnderlineBrush="#17c6cd"
                        AcceptsReturn="True"
                        Background="#e6eceb"
                        BorderBrush="#00b9c3"
                        FontSize="14"
                        Text="{Binding Start}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="20,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#00e4ff"
                        Text="长度" />
                    <TextBox
                        MaxWidth="400"
                        Padding="10"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Foreground="#17c6cd"
                        materialDesign:HintAssist.Hint="请输入长度"
                        materialDesign:TextFieldAssist.UnderlineBrush="#17c6cd"
                        AcceptsReturn="True"
                        Background="#e6eceb"
                        BorderBrush="#00b9c3"
                        FontSize="14"
                        Text="{Binding Length}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="20,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#00e4ff"
                        Text="输出寄存器" />
                    <ComboBox
                        Padding="9"
                        materialDesign:HintAssist.Hint="-----存储区选择-----"
                        materialDesign:TextFieldAssist.UnderlineBrush="#00e4ff"
                        BorderBrush="#00e4ff"
                        FontSize="14"
                        Foreground="#00e4ff"
                        ItemsSource="{Binding StoreAreaList, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding SelectStoreArea}" />
                    <TextBlock
                        Margin="20,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#00e4ff"
                        Text="备注说明" />
                    <TextBox
                        MaxWidth="400"
                        Padding="10"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Foreground="#17c6cd"
                        materialDesign:HintAssist.Hint="请输入备注信息"
                        materialDesign:TextFieldAssist.UnderlineBrush="#17c6cd"
                        AcceptsReturn="True"
                        Background="#e6eceb"
                        BorderBrush="#00b9c3"
                        FontSize="14"
                        Text="{Binding Remark}"
                        TextWrapping="Wrap" />
                    <Button
                        Height="40"
                        Margin="15,0,0,0"
                        materialDesign:RippleAssist.Feedback="#00e4ff"
                        Background="#04a9f3"
                        BorderBrush="#04a9f3"
                        Command="{Binding AddGroupCommand}"
                        Content="新增通信组"
                        FontSize="16"
                        Foreground="#fff"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}" />

                    <Button
                        Height="40"
                        Margin="15,0,0,0"
                        materialDesign:RippleAssist.Feedback="#00e4ff"
                        Background="#02c294"
                        BorderBrush="#02c294"
                        Command="{Binding ModifyGroupCommand}"
                        CommandParameter="{Binding GroupName}"
                        Content="修改通信组"
                        FontSize="16"
                        Foreground="#fff"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                </StackPanel>
            </GroupBox>
        </Border>
        <Border
            Grid.Row="2"
            Margin="0,20,0,0"
            Background="#070b40"
            BorderBrush="#1d2f85"
            BorderThickness="2">
            <DataGrid
                Name="dataGridGroupList"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                AutoGenerateColumns="False"
                Background="Transparent"
                BorderThickness="0"
                CanUserAddRows="False"
                CanUserResizeColumns="True"
                FontSize="16"
                ItemsSource="{Binding GroupsList}"
                SelectionMode="Single">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <!--  网格线颜色  -->
                        <Setter Property="CanUserResizeColumns" Value="false" />
                        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
                        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
                        <Setter Property="HeadersVisibility" Value="Column" />
                        <Setter Property="HorizontalGridLinesBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="#0a145e" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="VerticalGridLinesBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="Transparent" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Style>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Foreground" Value="#9ec7ff" />
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <!--<Setter Property="Background" Value="#001f55"></Setter>-->
                        <Setter Property="Foreground" Value="#1db4e1" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="BorderBrush" Value="#0a145e" />
                        <Setter Property="Height" Value="70" />
                        <Setter Property="FontSize" Value="14" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush>
                                    <GradientStop Offset="0" Color="#0a145e" />
                                    <GradientStop Offset="1" Color="#070b40" />
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Height" Value="50" />
                        <Setter Property="Foreground" Value="#9ec7ff" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush>
                                            <GradientStop Offset="0" Color="#5f3bbe" />
                                            <GradientStop Offset="1" Color="#070b40" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="#0a145e" />
                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                <Setter Property="Foreground" Value="#9ec7ff" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="50*" Header="通信组名称">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding GroupName}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="起始地址">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding Start}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="长度">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding Length}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="存储区名称">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding StoreArea}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="50*" Header="备注说明">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding Remark}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="100*" Header="操作">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Button
                                        Background="#a42fc9"
                                        BorderBrush="#a42fc9"
                                        Command="{Binding DataContext.DeleteGroupCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding GroupName}"
                                        Content="删除通信组"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <behavior:Interaction.Triggers>
                    <behavior:EventTrigger EventName="SelectionChanged">
                        <behavior:InvokeCommandAction Command="{Binding SelectRowCommand}" CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                    </behavior:EventTrigger>
                </behavior:Interaction.Triggers>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
