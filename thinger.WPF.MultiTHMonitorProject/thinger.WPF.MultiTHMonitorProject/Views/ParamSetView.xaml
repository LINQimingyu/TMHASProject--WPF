<UserControl
    x:Class="thinger.WPF.MultiTHMonitorProject.Views.ParamSetView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:thinger.WPF.MultiTHMonitorProject.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid
        Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Background="#070b40"
            BorderBrush="#1d2f86"
            BorderThickness="2">
            <StackPanel
                Orientation="Horizontal">
                <Border
                    Width="130"
                    Height="40"
                    Margin="20"
                    Background="#00cafd"
                    CornerRadius="15">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="通信配置" />
                </Border>
                <TextBox
                    MaxWidth="400"
                    Margin="10,0,0,0"
                    Padding="10"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Foreground="#17c6cd"
                    materialDesign:HintAssist.Hint="请输入设备IP地址"
                    materialDesign:TextFieldAssist.UnderlineBrush="#17c6cd"
                    Background="#e6eceb"
                    BorderBrush="#00b9c3"
                    FontSize="14"
                    Text="{Binding IPAddress}" />
                <TextBox
                    Height="40"
                    MaxWidth="400"
                    Margin="15,0,0,0"
                    Padding="10"
                    materialDesign:HintAssist.Foreground="#17c6cd"
                    materialDesign:HintAssist.Hint="请输入设备端口号"
                    materialDesign:TextFieldAssist.UnderlineBrush="#17c6cd"
                    Background="#e6eceb"
                    BorderBrush="#00b9c3"
                    FontSize="14"
                    Text="{Binding Port}" />
                <Button
                    Width="120"
                    Height="40"
                    Margin="15,0,0,0"
                    materialDesign:RippleAssist.Feedback="#DD000000"
                    Background="#04a9f3"
                    BorderBrush="#04a9f3"
                    Command="{Binding ConfirmSetCommand}"
                    Content="确定设置"
                    Cursor="Hand"
                    FontSize="16"
                    Foreground="#fff"
                    Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                <Button
                    Width="120"
                    Height="40"
                    Margin="15,0,0,0"
                    materialDesign:RippleAssist.Feedback="#DD000000"
                    Background="#fa9779"
                    BorderBrush="#fa9779"
                    Command="{Binding CancelSetCommand}"
                    Content="取消设置"
                    FontSize="16"
                    Foreground="#fff"
                    Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                <Button
                    Width="120"
                    Height="40"
                    Margin="15,0,0,0"
                    materialDesign:RippleAssist.Feedback="#DD000000"
                    Background="#f36ea8"
                    BorderBrush="#f36ea8"
                    Command="{Binding OpenGroupViewCommand}"
                    CommandParameter="GroupConifgView"
                    Content="通信组配置"
                    FontSize="16"
                    Foreground="#fff"
                    Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                <Button
                    Width="120"
                    Height="40"
                    Margin="15,0,0,0"
                    materialDesign:RippleAssist.Feedback="#DD000000"
                    Background="#f36ea8"
                    BorderBrush="#f36ea8"
                    Command="{Binding OpenVariableViewCommand}"
                    CommandParameter="VariableConfigView"
                    Content="变量配置"
                    Cursor="Hand"
                    FontSize="16"
                    Foreground="#fff"
                    Style="{StaticResource MaterialDesignRaisedAccentButton}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
