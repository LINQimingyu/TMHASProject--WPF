<UserControl
    x:Class="thinger.WPF.MultiTHMonitorProject.Charts.Guage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:thinger.WPF.MultiTHMonitorProject.Charts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Canvas x:Name="gaugeCanvas">
        <Path
            Width="420"
            Height="400"
            StrokeStartLineCap="Round"
            StrokeThickness="30">
            <Path.Data>
                <PathGeometry Figures="M 0,200 A 200,200 0 0 1 58.57864,58.57864" />
            </Path.Data>
            <Path.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="Green" />
                        <GradientStop Offset="1.0" Color="Yellow" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Path.Stroke>
        </Path>
        <Path
            Width="420"
            Height="400"
            Stroke="Yellow"
            StrokeStartLineCap="Round"
            StrokeThickness="30">
            <Path.Data>
                <PathGeometry Figures="M 0,200 A 200,200 0 0 1 58.57864,58.57864" />
            </Path.Data>
        </Path>
        <Path
            Width="420"
            Height="400"
            Stroke="Green"
            StrokeThickness="30">
            <Path.Data>
                <PathGeometry Figures="M 58.57864,58.57864 A 200,200 0 0 1 341.42136,58.57864" />
            </Path.Data>
        </Path>
        <Path
            Width="420"
            Height="400"
            Stroke="Red"
            StrokeEndLineCap="Round"
            StrokeThickness="30">
            <Path.Data>
                <PathGeometry Figures="M 341.42136,58.57864 A 200,200 0 0 1 400,200" />
            </Path.Data>
        </Path>
        <Line
            Stroke="Green"
            StrokeThickness="2"
            X1="30.85533"
            X2="40.25225"
            Y1="138.43637"
            Y2="141.85658" />

        <Path x:Name="indicatorPin" Fill="Orange">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure IsClosed="True" StartPoint="200,195">
                            <PathFigure.Segments>
                                <LineSegment Point="20,200" />
                                <LineSegment Point="200,205" />
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Canvas>
</UserControl>
